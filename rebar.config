{pre_hooks, [{"(linux|darwin)", compile, "make compile_nif"}]}.
{post_hooks, [{"(linux|darwin)", clean, "make clean_nif"}]}.

{deps, [
    {lager, ".*", {git, "https://github.com/erlang-lager/lager.git", {tag, "3.4.2"}}}
]}.

{
    erl_opts,
    [
        warnings_as_errors ,
        warn_export_all,
        {parse_transform, lager_transform}
    ]
}.
