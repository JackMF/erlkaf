{pre_hooks, [{"(linux|darwin)", compile, "make compile_nif"}]}.
{post_hooks, [{"(linux|darwin)", clean, "make clean_nif"}]}.
{artifacts, ["priv/erlkaf_nif.so"]}.

{deps, [
    {lager, ".*", {git, "https://github.com/erlang-lager/lager.git", {tag, "3.6.6"}}},
    {jsone, ".*", {git, "https://github.com/sile/jsone.git", {tag, "1.4.7"}}},
    {plists, ".*", {git, "https://github.com/silviucpp/plists.git", {tag, "1.1.2"}}},
    {esq, ".*", {git, "https://github.com/fogfish/esq.git", {tag, "2.0.4"}}}
]}.

{erl_opts, [
    warnings_as_errors,
    warn_export_all,
    {parse_transform, lager_transform}
]}.
